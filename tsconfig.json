{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      // "@controllers": ["src/controllers/*"],
      // "@routes": ["src/routes/*"],
      // "@utils": ["src/utils/*"],
      // "@loaders": ["src/loaders/*"],
      "@tests/*": ["tests/*"]
    },
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
